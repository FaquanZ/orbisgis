<plugin>
	<activator class="org.orbisgis.geoview.Activator"/>



	<extension-point id="org.orbisgis.geoview.Action"
		schema="${org.orbisgis.core}/schema/action.xsd"/>
	<extension-point id="org.orbisgis.geoview.Tool"
		schema="schema/tool.xsd"/>
	<extension-point id="org.orbisgis.geoview.NewLayerWizard"
		schema="schema/newLayerWizard.xsd"/>
	<extension-point id="org.orbisgis.geoview.View" schema="schema/view.xsd"/>
	<extension-point id="org.orbisgis.geoview.toc.LayerAction"
		schema="schema/layerAction.xsd"/>
	<extension-point id="org.orbisgis.geoview.SQLRepository"
		schema="schema/sqlRepository.xsd"/>

	<extension id="org.orbisgis.geoview.NewLayer"
		point="org.orbisgis.geoview.Action">
		<menu id="org.orbisgis.geoview.File" text="File"/>
		<action menuId="org.orbisgis.geoview.File"
			id="org.orbisgis.geoview.NewLayerAction" text="Open"
			icon="/org/orbisgis/geoview/images/add.png"
			class="org.orbisgis.geoview.NewLayerAction"/>
	</extension>
	<extension point="org.orbisgis.Window">
		<window id="org.orbisgis.geoview.Window" newOnStartup="true"
			class="org.orbisgis.geoview.GeoView2D"/>
	</extension>

	<extension point="org.orbisgis.geoview.toc.LayerAction"
		id="org.orbisgis.geoview.toc.LayerManagement">
		<action id="org.orbisgis.geoview.toc.RemoveLayerAction"
			text="Remove layer" group="org.orbisgis.geoview.toc.LayerManagement"
			icon="/org/orbisgis/geoview/images/remove.png"
			class="org.orbisgis.geoview.views.toc.RemoveLayerAction"/>
		<action id="org.orbisgis.geoview.toc.GroupLayersAction"
			text="Group layers" group="org.orbisgis.geoview.toc.LayerManagement"
			icon="/org/orbisgis/geoview/images/arrow_in.png"
			class="org.orbisgis.geoview.views.toc.GroupLayersAction"/>
		<action id="org.orbisgis.geoview.toc.CreateGroupAction" text="New group"
			group="org.orbisgis.geoview.toc.LayerManagement"
			icon="/org/orbisgis/geoview/images/layers.png"
			class="org.orbisgis.geoview.views.toc.CreateGroupAction"/>
	</extension>
	<extension point="org.orbisgis.geoview.toc.LayerAction"
		id="org.orbisgis.geoview.toc.NavigationActions">
		<action id="org.orbisgis.geoview.toc.ZoomToLayerAction"
			text="Zoom to layer"
			group="org.orbisgis.geoview.toc.NavigationActions"
			icon="/org/orbisgis/geoview/images/magnifier.png"
			class="org.orbisgis.geoview.views.toc.ZoomToLayerAction"/>
	</extension>
	<extension point="org.orbisgis.geoview.toc.LayerAction"
		id="org.orbisgis.geoview.TableActions">
		<action id="org.orbisgis.geoview.toc.ShowTable" text="Show in table"
			group="org.orbisgis.geoview.data"
			icon="/org/orbisgis/geoview/images/openattributes.png"
			class="org.orbisgis.geoview.views.table.ShowInTable"/>
	</extension>


	<extension point="org.orbisgis.geoview.toc.LayerAction">
	<menu id="org.orbisgis.geoview.ExportMenu" text="Export..."/>

	<!-- Save in a file ============================================================== -->

		<action id="org.orbisgis.geoview.vectorLayer.io.saveInAFile" text="Save in a file"
			group="org.orbisgis.vectorLayer"
			menuId="org.orbisgis.geoview.ExportMenu"
			class="org.orbisgis.geoview.actions.io.SaveVectorLayerInAFile"/>

	</extension>

	<extension id="org.orbisgis.geoview.NewFileWizard"
		point="org.orbisgis.geoview.NewLayerWizard">
		<wizard id="org.orbisgis.geoview.NewFileWizard"
			class="org.orbisgis.geoview.wizards.NewFileLayerWizard"/>
	</extension>
	<extension point="org.orbisgis.geoview.Action">
		<action id="org.orbisgis.geoview.tools.FullExtent"
			menuId="org.orbisgis.geoview.Tools" text="Full extent"
			menuGroup="org.orbisgis.geoview.tools.Inmediate"
			icon="/org/orbisgis/geoview/images/world.png"
			toolbarId="org.orbisgis.geoview.Navigation"
			class="org.orbisgis.geoview.actions.FullExtent"/>
	</extension>
	<extension id="org.orbisgis.geoview.NavigationTools"
		point="org.orbisgis.geoview.Tool">
		<menu id="org.orbisgis.geoview.Tools" text="Tools"/>
		<toolbar id="org.orbisgis.geoview.Navigation" text="Navigation"/>
		<tool id="org.orbisgis.geoview.tools.ZoomIn"
			menuId="org.orbisgis.geoview.Tools" text="Zoom In"
			menuGroup="org.orbisgis.geoview.tools.Selectable"
			icon="/org/orbisgis/geoview/images/zoom_in.png"
			mouse-cursor="/org/orbisgis/geoview/images/zoom_in.gif"
			toolbarId="org.orbisgis.geoview.Navigation" selectable="true"
			class="org.orbisgis.tools.instances.ZoomInTool"/>
		<tool id="org.orbisgis.geoview.tools.ZoomOut"
			menuId="org.orbisgis.geoview.Tools" text="Zoom Out"
			menuGroup="org.orbisgis.geoview.tools.Selectable"
			icon="/org/orbisgis/geoview/images/zoom_out.png"
			mouse-cursor="/org/orbisgis/geoview/images/zoom_out.gif"
			toolbarId="org.orbisgis.geoview.Navigation" selectable="true"
			class="org.orbisgis.tools.instances.ZoomOutTool"/>
		<tool id="org.orbisgis.geoview.tools.Pan"
			menuId="org.orbisgis.geoview.Tools" text="Pan"
			menuGroup="org.orbisgis.geoview.tools.Selectable"
			icon="/org/orbisgis/geoview/images/pan.png"
			mouse-cursor="/org/orbisgis/geoview/images/pan.gif"
			toolbarId="org.orbisgis.geoview.Navigation" selectable="true"
			class="org.orbisgis.tools.instances.PanTool"/>
	</extension>
	<extension point="org.orbisgis.geoview.Tool">
		<toolbar id="org.orbisgis.geoview.Info" text="Info tools"/>
		<tool id="org.orbisgis.geoview.tools.InfoTool"
			menuId="org.orbisgis.geoview.Tools" text="Vector Information"
			menuGroup="org.orbisgis.geoview.tools.Selectable"
			icon="/org/orbisgis/geoview/images/information.png"
			toolbarId="org.orbisgis.geoview.Info" selectable="true"
			class="org.orbisgis.geoview.views.table.InfoTool"/>
	</extension>
	<extension point="org.orbisgis.geoview.View">
		<view id="org.orbisgis.geoview.Toc"
			class="org.orbisgis.geoview.views.toc.TocView"
			icon="/org/orbisgis/geoview/images/map.png"
			title="TOC"/>
	</extension>
	<extension point="org.orbisgis.geoview.View">
		<view id="org.orbisgis.geoview.MapControl"
			class="org.orbisgis.geoview.views.MapControlView"
			icon="/org/orbisgis/geoview/images/worldmap.png"
			title="Map"/>
	</extension>


	<extension point="org.orbisgis.geoview.View">
		<view id="org.orbisgis.geoview.Table"
			class="org.orbisgis.geoview.views.table.TableView"
			icon="/org/orbisgis/geoview/images/openattributes.png"
			title="Table"/>

	</extension>

	<extension point="org.orbisgis.geoview.View">
		<view id="org.orbisgis.geoview.GeoMark"
			class="org.orbisgis.geoview.views.geomark.GeomarkView"
			icon="/org/orbisgis/geoview/images/world_add.png"
			title="Geomarks"/>
	</extension>
	<extension point="org.orbisgis.geoview.View">
		<view id="org.orbisgis.geoview.SQLConsole"
			class="org.orbisgis.geoview.views.sqlConsole.ConsoleView"
			icon="/org/orbisgis/geoview/images/script_code.png"
			title="SQL Console"/>
	</extension>


	<extension point="org.orbisgis.geoview.View">
		<view id="org.orbisgis.geoview.sqlSemanticRepository.SQLRepositoryView"
			class="org.orbisgis.geoview.views.sqlSemanticRepository.SQLRepositoryView"
			icon="/org/orbisgis/geoview/images/group_gear.png"
			title="SQL Repository"/>
	</extension>


	<extension point="org.orbisgis.geoview.View">
		<view id="org.orbisgis.geoview.BSHConsole"
			class="org.orbisgis.geoview.views.beanshellConsole.BSHConsoleView"
			icon="/org/orbisgis/geoview/images/page_white_cup.png"
			title="Beanshell Console"/>
	</extension>



	<extension point="org.orbisgis.geoview.View">
		<view id="org.orbisgis.geoview.OutputView"
			class="org.orbisgis.geoview.views.outputView.OutputView"
			icon="/org/orbisgis/geoview/images/format-justify-fill.png"
			title="Output"/>
	</extension>


	<extension point="org.orbisgis.geoview.View">
		<view id="org.orbisgis.geoview.jobs"
			class="org.orbisgis.geoview.views.jobs.JobView"
			icon="/org/orbisgis/geoview/images/hourglass.png"
			title="Job status"/>
	</extension>


	<extension point="org.orbisgis.geoview.View">
		<view id="org.orbisgis.geoview.Memory"
			class="org.orbisgis.geoview.views.memoryIndicator.MemoryView"
			icon="/org/orbisgis/geoview/images/utilities-system-monitor.png"
			title="Memory usage"/>
	</extension>

	<extension point="org.orbisgis.geoview.Tool">
		<toolbar id="org.orbisgis.geoview.FenceToolbar" text="Fence tools..."/>
		<tool id="org.orbisgis.geoview.fence.PolygonFence"
			toolbarId="org.orbisgis.geoview.FenceToolbar"
			icon="/org/orbisgis/geoview/images/shape_polygon_edit.png"
			text="Polygon fence" selectable="true"
			class="org.orbisgis.geoview.actions.fence.FencePolygonTool"/>
	</extension>



	<extension point="org.orbisgis.geoview.SQLRepository">
		<sql resource-path="/org/orbisgis/geoview/OGCSQLQueries.xml"/>
	</extension>

	<extension point="org.orbisgis.geoview.SQLRepository">
		<sql resource-path="/org/orbisgis/geoview/GeoViewSQL.xml"/>
	</extension>

	<extension point="org.orbisgis.geoview.toc.LayerAction">
		<action id="org.edit" text="Edit Legend" group="editlayer"
			class="org.orbisgis.geoview.cui.EditLayerAction"/>
	</extension>

</plugin>