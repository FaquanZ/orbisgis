<?xml version="1.0" encoding="UTF-8"?>
<!-- IRSTV : 20070419 -->
<frame name="gcFrame" size="260,300" title="OrbisGIS :: G e o C a t a l o g"
	defaultCloseOperation="JFrame.EXIT_ON_CLOSE" plaf="com.sun.java.swing.plaf.windows.WindowsLookAndFeel">
	
	<!-- MenuBar -->
	<menubar id="menubar">
		<menu text="File">
			<menuitem id="mi_new2d" text="New OrbisGIS 2D" icon="resources/icons/new.gif" accelerator="alt N" ActionCommand="ac_new2d"/>
			<menuitem id="mi_new3d" text="New OrbisGIS 3D" enabled="false" icon="resources/icons/new.gif" accelerator="alt shift N" ActionCommand="ac_new3d"/>
			<separator/>
			<menuitem id="mi_openDS" text="Open a DataSource" icon="resources/icons/open.gif" accelerator="control N" ActionCommand="ac_openDS"/>
			<separator/>
			<menuitem id="mi_exit" text="Exit" icon="resources/icons/exit.gif" mnemonic="VK_X" accelerator="control X" ActionCommand="exit"/>
		</menu>
		<menu id="menu_GeoProcessing" text="GeoProcessing">
		</menu>
		<glue/>
		<menu text="Help">
			<menuitem id="mi_about" text="About..." enabled="true" icon="resources/icons/info.gif" accelerator="F1" Action="aboutAction"/>
		</menu>
	</menubar>

	<!-- ToolBar -->
	<panel layout="borderlayout" constraints="BorderLayout.NORTH">
		<toolbar floatable="true" borderPainted="true" orientation="HORIZONTAL">
			<button id="btn_button" ToolTipText="tt_Button" icon="resources/icons/new.gif" ActionCommand="widget_button"/>
			<button id="btn_panel" ToolTipText="tt_Panel" icon="resources/icons/open.gif" ActionCommand="widget_panel"/>
			<separator/>
			<button id="btn_label" ToolTipText="tt_Label" icon="resources/icons/help.gif" ActionCommand="widget_label" />
		</toolbar>
	</panel>    
</frame>