<plugin>
	<activator class="org.orbisgis.geocatalog.Activator"/>
	<extension-point id="org.orbisgis.geocatalog.ResourceWizard"
		name="GeoCatalog Wizards" schema="schema/resourceWizard.xsd"/>
	<extension-point id="org.orbisgis.geocatalog.ResourceAction"
		name="Contextual actions for resources"
		schema="schema/resourceAction.xsd"/>
	<extension-point id="org.orbisgis.geocatalog.Action"
		name="Generic action in the geocatalog"
		schema="${org.orbisgis.core}/schema/action.xsd"/>

	<extension id="org.orbisgis.geocatalog.BasicActions"
		point="org.orbisgis.geocatalog.Action">
		<menu id="org.orbisgis.geocatalog.File" text="File"
			icon="/org/orbisgis/geocatalog/images/house.png"/>
		<menu id="org.orbisgis.geocatalog.file.New"
			parent="org.orbisgis.geocatalog.File" text="Add..."/>

		<menu id="org.orbisgis.geocatalog.Help" text="Help"
			icon="/org/orbisgis/geocatalog/images/help.png"/>

		<toolbar id="org.orbisgis.geocatalog.MainBar" text="Geocatalog"/>

		<action id="org.orbisgis.geocatalog.NewResource" text="New Resource"
			menuId="org.orbisgis.geocatalog.file.New"
			icon="/org/orbisgis/geocatalog/images/add.png"
			class="org.orbisgis.geocatalog.NewResourceAction"/>
		<action id="org.orbisgis.geocatalog.Exit" text="Exit"
			menuId="org.orbisgis.geocatalog.File"
			icon="/org/orbisgis/geocatalog/images/door_out.png"
			toolbarId="org.orbisgis.geocatalog.MainBar"
			class="org.orbisgis.geocatalog.ExitAction"/>
		<action id="org.orbisgis.geocatalog.About" text="About OrbisGIS"
			menuId="org.orbisgis.geocatalog.Help"
			class="org.orbisgis.geocatalog.tools.about.AboutAction"/>
	</extension>
	<extension point="org.orbisgis.geocatalog.Action"
		id="org.orbisgis.geocatalog.WorkspaceAction">
		<action id="org.orbisgis.geocatalog.SaveWorkspace"
			menuId="org.orbisgis.geocatalog.File"
			menuGroup="org.orbisgis.geocatalog.WorkspaceAction"
			text="Save workspace"
			class="org.orbisgis.geocatalog.SaveWorkspaceAction"/>
		<action id="org.orbisgis.geocatalog.ChangeWorkspace"
			menuId="org.orbisgis.geocatalog.File"
			menuGroup="org.orbisgis.geocatalog.WorkspaceAction"
			text="Change workspace"
			class="org.orbisgis.geocatalog.ChangeWorkspaceAction"/>
	</extension>
	<extension point="org.orbisgis.Window">
		<window id="org.orbisgis.geocatalog.Window" newOnStartup="true"
			class="org.orbisgis.geocatalog.GeoCatalog"/>
	</extension>
	<extension point="org.orbisgis.geocatalog.ResourceWizard">
		<wizard id="org.orbisgis.geocatalog.NewFileResourceWizard"
			class="org.orbisgis.geocatalog.resources.file.NewFileResource"/>
	</extension>

	<extension point="org.orbisgis.geocatalog.ResourceWizard">
		<wizard id="org.orbisgis.geocatalog.NewDBResourceWizard"
			class="org.orbisgis.geocatalog.resources.db.NewDBResource"/>
	</extension>

	<extension point="org.orbisgis.geocatalog.ResourceWizard">
		<wizard id="org.orbisgis.geocatalog.NewFolderWizard"
			class="org.orbisgis.geocatalog.resources.file.NewFolder"/>
	</extension>
	<extension point="org.orbisgis.geocatalog.ResourceAction">
		<menu id="org.orbisgis.geocatalog.file.New" text="Add"/>
		<action id="org.orbisgis.geocatalog.NewResource"
			menuId="org.orbisgis.geocatalog.file.New"
			menuGroup="org.orbisgis.geocatalog.new" text="Add..."
			icon="/org/orbisgis/geocatalog/images/add.png"
			class="org.orbisgis.geocatalog.actions.NewResourceAction"/>
		<action id="org.orbisgis.geocatalog.DeleteResource"
			menuGroup="org.orbisgis.geocatalog.basic" text="Delete resource"
			icon="/org/orbisgis/geocatalog/images/remove.png"
			class="org.orbisgis.geocatalog.actions.DeleteResource"/>
		<action id="org.orbisgis.geocatalog.ClearCatalog"
			menuGroup="org.orbisgis.geocatalog.global" text="Clear catalog"
			icon="/org/orbisgis/geocatalog/images/bin_closed.png"
			class="org.orbisgis.geocatalog.actions.ClearCatalogAction"/>
		<action id="org.orbisgis.geocatalog.ClearFolder"
			menuGroup="org.orbisgis.geocatalog.basic" text="Clear folder"
			icon="/org/orbisgis/geocatalog/images/bin_closed.png"
			class="org.orbisgis.geocatalog.actions.ClearFolderAction"/>
	</extension>
	
	<extension point="org.orbisgis.geocatalog.ResourceAction">		
		<action id="org.orbisgis.geocatalog.ShowTable"
			menuGroup="org.orbisgis.geocatalog.basic" text="Show table"
			icon="/org/orbisgis/geocatalog/images/openattributes.png"
			class="org.orbisgis.geocatalog.actions.ShowTableAction"/>	
	</extension>

	<extension id="org.orbisgis.geocatalog.BasicActions"
		point="org.orbisgis.geocatalog.ResourceWizard">
		<wizard id="org.orbisgis.geocatalog.XYZDem"
			class="org.orbisgis.geocatalog.resources.xyzdem.ConvertXYZDem"/>
	</extension>

</plugin>