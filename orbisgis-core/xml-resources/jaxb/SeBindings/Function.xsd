      <xsd:extension base="ogc:ExpressionType">
        <xsd:attribute name="fallbackValue" type="xsd:string" use="optional"/>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>
  <xsd:annotation>
    <xsd:documentation>Numeric formatting function</xsd:documentation>
  </xsd:annotation>

