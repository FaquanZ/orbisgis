<?xml version='1.0' encoding='UTF-8'?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<xs:element name="update-site">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="update" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="update">
		<xs:complexType>
			<!--Id of the artifact being updated-->
			<xs:attribute name="artifact-name" type="xs:string" use="required"/>
			<!--The resulting version number after the update-->
			<xs:attribute name="version-number" type="xs:string" use="required"/>
			
			<!--Version name after the update. Just for visualization purposes-->
			<xs:attribute name="version-name" type="xs:string"/>
			<!--Update description. Just for visualization purposes-->
			<xs:attribute name="description" type="xs:string" use="required"/>
			<!--Checksum code of the update file-->
			<xs:attribute name="checksum" type="xs:string" use="required"/>
			<!--URL of the update file-->
			<xs:attribute name="release-file-url" type="xs:string" use="required"/>
		</xs:complexType>
	</xs:element>

</xs:schema>